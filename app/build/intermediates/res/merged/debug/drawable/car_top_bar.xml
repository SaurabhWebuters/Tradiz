<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">


            <solid android:color="@color/colorPrimary" />

        </shape>
    </item>

    <item
        android:bottom="0.5dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape
            android:dither="true"
            android:shape="rectangle">


            <solid android:color="@color/colorPrimary" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
</layer-list>
